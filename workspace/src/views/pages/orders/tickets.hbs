<article id="ticketsItems" style="display: none;">
    <ul class="available">
        {{#if tickets/available}}
        {{#each tickets/available}}
        <li>
            <span class="id">{{idticket}}</span>
            <span class="wt">{{idworktype}}</span>
            <span class="dc">{{description}}</span>
            {{#if images}}
            <samp class="im">
                {{#each images}}<span class="it">{{this}}</span>{{/each}}
            </samp>
            {{/if}}
        </li>
        {{/each}}
        {{/if}}
    </ul>
    <ul class="requested">
        {{#if tickets/requested}}
        {{#each tickets/requested}}
        <li>
            <span class="id">{{idticket}}</span>
            <span class="wt">{{idworktype}}</span>
            <span class="dc">{{description}}</span>
            {{#if images}}
            <samp class="im">
                {{#each images}}<span class="it">{{this}}</span>{{/each}}
            </samp>
            {{/if}}
        </li>
        {{/each}}
        {{/if}}
    </ul>
    <p>{{user.iduser}}</p>
</article>